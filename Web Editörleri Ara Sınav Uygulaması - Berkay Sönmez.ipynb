    "\n",
    "# Görüntüye daire çizme\n",
    "cv2.circle(image, (300, 300), 50, (255, 0, 0), -1)\n",
    "\n",
    "# Bulanıklaştırılmış görüntüyü göster\n",
    "cv2.imshow('Bulanik Resim', blurred_image)\n",
    "\n",
    "# Kenarları göster\n",
    "cv2.imshow('kenar', edges)\n",
